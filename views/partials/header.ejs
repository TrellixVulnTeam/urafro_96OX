<body>
    <% if(success.length > 0 || error.length > 0) { %>
        <div class="container flash">
            <% if(success && success.length > 0) { %>
            <div class="success-flash">
                <p><%= success %></<p>
            </div>
            <% } %>
            <% if( error && error.length > 0) { %>
            <div class="error-flash">
                <p><%= error %></p>
            </div>
            <% } %>
        </div>
    <% } %>