<% include ./partials/header %>

<div class="container">

  <div class="l-container">

    <span class="menu-icon" onclick="openMenu()">&#9776;</span>

  </div>

  <div class="menu-container" id="navbar">

    <span class="closebtn" onclick="closeMenu()">&times</span>

    <div class="menu-content">
      <a href="/blogs">Posts</a>
      <!-- will create an about page with mission statement and what-not -->
      <a href="/blogs/new">Create</a>
      <a href="#">About</a>
      <!-- this will link to several ideas about how we can impact meaningful change in our communities -->
      <a href="/projects">Projects</a>
      <!-- create a contact us panel with socials -->
      <a href="#">Contact Us</a>
      <% if (!currentUser) { %>
      <a href="/signup">Sign Up</a>
      <a href="/login">Login</a>
      <% } %>
      <% if (currentUser) { %>
      <a href="/logout">Logout</a>
      <% } %>
    </div>
  </div>

  <div class="hero">
    <div class="hero__header">
      <a href="#" class="hero__header--link">
        <!-- dynamic placeholder avatar -->
        <img class="hero__header--image" src="/resources/img/founder-min.jpg" alt="Nashe Dan's image">
      </a>
      <div class="hero__body">
        <h2 class="hero__body--mainTitle">Join Us.</h2>
        <p class="hero__body--desc">Find out about projects your peers are working on and get involved</p>
        <a href="#" class="hero-btn hero-btn-full hero__body--link">
          <i class="fab fa-instagram hero__body--linkIcon"></i>
        </a>
        <a href="#" class="hero-btn hero-btn-ghost hero__body--link">
          <i class="fab fa-twitter hero__body--linkIcon"></i>
        </a>
      </div>
    </div>
  </div>

  <div class="showcase">

    <div class="show-wrapper">

      <div class="comment">
        <div class="section zero">

          <div class="section__inputs auth">

            <h2 class="section__inputs--heading">Sign Up</h2>

            <form action="/signup" method="POST">

              <div class="inputsBox">

                <label class="inputsBox--label" for="username">Username**</label>
                <input class="inputsBox--input inputsBox--text" type="text" name="username" id="username" placeholder="John" required>

                <label class="inputsBox--label" for="password">Password**</label>
                <input class="inputsBox--input inputsBox--password" type="password" name="password" id="password" placeholder="Put in on lock :)">

                <label class="inputsBox--label" for="bio">Your Bio**</label>
                <textarea class="inputsBox--input inputsBox--textarea" name="bio" id="bio" cols="30" rows="5" placeholder="I write about food, love and meme culture! [short & concise. don't shout at us with big caps tho, lol]" required></textarea>

                <label class="inputsBox--label" for="avatarUrl">Profile Pic**</label>
                <input class="inputsBox--input inputsBox--text" type="text" name="avatarUrl" id="avatarUrl" placeholder="profile image url" required>

                <label class="inputsBox--label" for="instagram">Instagram**</label>
                <input class="inputsBox--input inputsBox--text" type="text" name="instagram" id="instagram" placeholder="instagram url" required>

                <label class="inputsBox--label" for="username">Twitter**</label>
                <input class="inputsBox--input inputsBox--text" type="text" name="twitter" id="twitter" placeholder="twitter url" required>

                <input class="btn btn-full form--btn" type="submit" value="join us">

                <h5 class="auth__smallHeading">Already have an account? &nbsp; <a class="auth__smallHeading--link" href="/login">Login!</a></h5>
              </div>

            </form>

          </div>
        </div>
      </div>
    </div>
    <footer>
      <p>
        &copy; <span>urAfro</span>. All rights reserved. Invest in a peer, believe in WE.
      </p>
    </footer>
  </div>

</div>


<% include ./partials/footer %>

