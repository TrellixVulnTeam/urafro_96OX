<% include ../partials/header %>

<div class="container">

  <div class="l-container">

    <span class="menu-icon" onclick="openMenu()">&#9776;</span>

  </div>

  <div class="menu-container" id="navbar">

    <span class="closebtn" onclick="closeMenu()">&times</span>

    <div class="menu-content">
      <a href="/">Home</a>
      <a href="/blogs/new">Create</a>
      <!-- this will link to several ideas about how we can impact meaningful change in our communities -->
      <a href="#">Projects</a>
      <!-- create a contact us panel with socials -->
      <a href="#">Contact Us</a>
      <!-- will create an about page with mission statement and what-not -->
      <a href="#">About</a>
      <% if (!currentUser) { %>
        <a href="/signup">Sign Up</a>
        <a href="/login">Login</a>
      <% } %>
      <% if (currentUser) { %>
        <a href="/logout">Logout</a>
      <% } %>
    </div>
  </div>

  <!-- Displaying dynamic user data -->
  <% if(currentUser) { %>
    <div class="hero">
      <!-- header image will be replaced by signed in user's image -->
      <div class="header">
        <a href="#">
          <img src="<%= currentUser.avatarUrl %>" alt="author image">
        </a>
        <h2>Hello.</h2>
    
        <p><%= currentUser.bio %></p>
    
        <!-- will implement the use of dynamic social links -->
        <a href="#" class="hero-btn hero-btn-full">
          <i class="fab fa-instagram"></i>
        </a>
        <a href="#" class="hero-btn hero-btn-ghost">
          <i class="fab fa-twitter"></i>
        </a>
    
        <!-- dynamic user data ends here -->
      </div>
    </div>
  <% } %>

  <% if(!currentUser) { %>
    <div class="hero">
    
      <div class="header">
        <a href="#">
          <img src="https://i.imgur.com/f89JM9hs.png" %>" alt="author image">
        </a>
        <h2 class="brand">#weRme</h2>
    
        <p>Translating an idea into a practical solution can be hard alone. <a href="/signup">Join us</a> and let's make
          change!</p>
    
        <a href="https://instagram.com/nashe_dan" target="_blank" class="hero-btn hero-btn-full">
          <i class="fab fa-instagram"></i>
        </a>
        <a href="https://twitter.com/tinashe_dan" target="_blank" class="hero-btn hero-btn-ghost">
          <i class="fab fa-twitter"></i>
        </a>
    
      </div>
    </div>
  <% } %>

  <div class="showcase">

    <div class="showcase-boxes">
      <!-- create a box for every blog in database with data from the "/blogs" Index route-->
      <% foundBlogs.forEach(function(blog) { %>
        <div class="showcase-box">

        <!-- link will go to the blog show route-->
        <a href="/blogs/<%= blog._id %>">
          <img src="<%= blog.body.header.mainImage %>" alt="coffee music and gaming">
        </a>

          <div class="showcase-card">

            <div class="author-card">
              <div class="card-image">
                <!-- generic card image will be replaced by user image from the user schema -->
                <a href="#">
                  <img
                    src="<%= blog.author.avatarUrl %>"
                    alt="author image">
                </a>
              </div>

              <div class="card-text">
                <!-- generic mini-card h5 heading will be replaced by blog author from blog schema-->
                <h3><a href="#"><%= blog.author.username %></a></h3>
                <p><%= blog.createdAt.toLocaleDateString() %></p>
              </div>
            </div>

            <!-- display dynamic blog tag by use of a conditional (if/else statement) -->
            <div class="card-tag">
              <% if(blog.tag == "Life") { %>
                <a href="#" class="green"><%= blog.tag %></a>
              <% } else if (blog.tag == "Code") { %>
              <a href="#" class="yellow"><%= blog.tag %></a>
              <% } else if (blog.tag == "Music") { %>
              <a href="#" class="purple"><%= blog.tag %></a>
              <% } else if (blog.tag == "Self") { %>
              <a href="#" class="red"><%= blog.tag %></a>
              <% } %>
            </div>

          </div>

        </div>

        <div class="showcase-text">
          <h3>
            <a href="/blogs/<%= blog._id %>">
              <%= blog.body.header.mainHeading %>
            </a>
          </h3>
          <p><%= blog.body.content.introParagraph.substring(0, 150) %>...</p>

          <div class="show-link">
            <a href="/blogs/<%= blog._id %>">Read More</a>
          </div>
          <hr>
        </div>
      <% }) %>
      </div>

      <footer>
        <p>
          Copyright &copy; <span>#weRme</span>. Invest in a peer, believe in WE.
        </p>
      </footer>
    </div>
  </div>

</div>

<% include ../partials/footer %>

