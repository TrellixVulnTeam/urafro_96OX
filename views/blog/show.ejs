    <div class="show-wrapper">
      <div class="show-heading">

        <div class="main-heading">
          <h2><%= blog.body.header.mainHeading %></h2>
        </div>

        <div class="intro-paragraph">
          <p><%= blog.body.content.introParagraph %></p>
        </div>

      </div>

      <div class="show-content">
