<form action="/blogs/<%= foundBlog.id %>?_method=PUT" method="POST">
    <label for="blog[title]">Title</label>
    <input type="text" name="blog[title]" value="<%= foundBlog.title %>">
    <label for="blog[image]">Image Url</label>
    <input type="text" name="blog[image]" value="<%= foundBlog.image %>">
    <label for="blog[desc]">Description</label>
    <input type="text" name="blog[desc]" value="<%= foundBlog.desc %>">
    <input type="submit" value="Submit">
</form>